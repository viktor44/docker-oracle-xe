ARG BASE_IMAGE

FROM ${BASE_IMAGE}

RUN 7zzs x "${ORACLE_BASE}"/"${ORACLE_SID}".7z -o"${ORACLE_BASE}"/oradata/ > /dev/null \
		&& rm "${ORACLE_SID}".7z
